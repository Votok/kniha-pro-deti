{# Karta autora pro autori-knihy.html #}
{# Odd cards (1st, 3rd, 5th): image left. Even cards (2nd, 4th): image right #}
<div class="author-card shadow-card mb-5">
  <div class="row g-0 {% if loop.index % 2 == 0 %}flex-md-row-reverse{% endif %}">
    <div class="col-md-5">
      <img src="{{ author.photo }}" class="img-fluid h-100 w-100 object-fit-cover" alt="{{ author.name }}" style="aspect-ratio: 4/5;">
    </div>
    <div class="col-md-7">
      <div class="author-card-content p-4 p-md-5">
        <h2 class="author-name fw-bold mb-2">{{ author.name }}</h2>
        {% if author.title %}
        <p class="text-muted mb-3"><small>{{ author.title }}</small></p>
        {% else %}
        <p class="text-muted mb-3"><small>
          {% if author.role == "author" %}
            {% if author.gender == "male" %}Autor{% else %}Autorka{% endif %}
          {% elif author.role == "illustrator" %}
            {% if author.gender == "male" %}Ilustrátor{% else %}Ilustrátorka{% endif %}
          {% else %}
            {{ author.role }}
          {% endif %}
        </small></p>
        {% endif %}
        <div class="author-bio">
          {{ author.bio | safe }}
        </div>
        {% if author.links or author.email %}
        <div class="author-links mt-4 d-flex flex-wrap gap-2 align-items-center">
          {% if author.email %}
          <span class="email-copy-wrap">
            <span class="contact-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
              {{ author.email }}
            </span>
            <button type="button" class="email-copy-btn" data-copy-email="{{ author.email }}" title="Kopírovat e-mail">
              <svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
              <svg class="copy-check" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
              <span class="copy-label">Zkopírováno!</span>
            </button>
          </span>
          {% endif %}
          {% if author.links.website %}
          <a href="{{ author.links.website }}" class="btn btn-sm btn-outline-secondary" target="_blank" rel="noopener">
            <i class="bi bi-globe me-1"></i>Web
          </a>
          {% endif %}
          {% if author.links.divadlo %}
          <a href="{{ author.links.divadlo }}" class="btn btn-sm btn-outline-secondary" target="_blank" rel="noopener">
            <i class="bi bi-mask me-1"></i>Divadlo
          </a>
          {% endif %}
          {% if author.links.instagram %}
          <a href="{{ author.links.instagram }}" class="btn btn-sm btn-outline-secondary" target="_blank" rel="noopener">
            <i class="bi bi-instagram me-1"></i>Instagram
          </a>
          {% endif %}
          {% if author.links.pamatky %}
          <a href="{{ author.links.pamatky }}" class="btn btn-sm btn-outline-secondary" target="_blank" rel="noopener">
            <i class="bi bi-book me-1"></i>Památky
          </a>
          {% endif %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
