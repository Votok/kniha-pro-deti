{# Karta knihy pro listing (homepage #knihy section) #}
<div class="col-md-6 col-lg-4 mb-4">
  <div class="card book-card h-100">
    <img src="{{ book.cover }}" class="card-img-top" alt="{{ book.title }}">
    <div class="card-body d-flex flex-column">
      <h5 class="card-title">{{ book.title }}</h5>
      <p class="text-muted small">{{ book.ageGroup }}</p>
      <p class="card-text flex-grow-1">{{ book.summary | safe }}</p>
      <a href="/{{ book.slug }}.html" class="btn btn-primary mt-2">Více informací</a>
    </div>
  </div>
</div>
